<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              app:layout_behavior="@string/appbar_scrolling_view_behavior"
              tools:context=".UI.hossam.chefs_list_view"
              tools:showIn="@layout/activity_chefs_list_view">
    <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:id="@+id/internal_Layout"
            android:padding="8dp"
    >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:id="@+id/Chef_Name"
                tools:text="Ahmed"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#8b2121"
                android:layout_marginLeft="16dp"
                android:gravity="bottom"
                android:layout_alignParentLeft="true"

        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:id="@+id/chef_nationality"
                tools:text="Egyption"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#6b1717"
                android:layout_marginLeft="16dp"
                android:gravity="bottom"
                android:layout_centerHorizontal="true"

        />
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select"
                android:id="@+id/ChefSelect"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
        />
    </RelativeLayout>

</LinearLayout>