<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              app:layout_behavior="@string/appbar_scrolling_view_behavior"
              tools:context=".ui.ReviewAcivity"
              tools:showIn="@layout/activity_review_acivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="3"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/Restuarant_Name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="3"
                android:text=" Restuarant Name"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="29dp"/>

        <RatingBar
                android:id="@+id/Restaurant_Rate"
                style="@android:style/Widget.DeviceDefault.RatingBar.Small"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="0.1"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="3"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/Chef_Name"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:text="Chef Name"/>

        <RatingBar
                android:id="@+id/Chef_Rate"
                style="@android:style/Widget.DeviceDefault.RatingBar.Small"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="0.1"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="3"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/Delivery_Man_Name"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_margin="8dp"
                android:layout_weight="3"
                android:text="Delivery Man Name"/>

        <RatingBar
                android:id="@+id/Delivery_Man_Rate"
                style="@android:style/Widget.DeviceDefault.RatingBar.Small"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="0.1"/>
    </LinearLayout>

    <ListView
            android:id="@+id/Order_Elements"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="20"/>

    <Button
            android:id="@+id/Back_TO_orders_List"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dp"
            android:layout_weight="3"
            android:text="Back To Orders"/>

</LinearLayout>
