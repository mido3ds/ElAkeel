<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="88dp"
              android:orientation="horizontal"
              app:layout_behavior="@string/appbar_scrolling_view_behavior"
              tools:context=".PrevOrdersList_View"
              tools:showIn="@layout/activity_prev_orders_list__view">
    <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/internal_Layout"
            android:padding="8dp"
    >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:id="@+id/Restuarant_Name"
                tools:text="MAC"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#8b2121"
                android:layout_marginLeft="16dp"
                android:gravity="bottom"

        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:id="@+id/OrderDate"
                tools:text="19-11-2018"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#6b1717"
                android:layout_marginLeft="16dp"
                android:gravity="bottom"

        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:id="@+id/Total_price"
                tools:text="300"
                android:textSize="18sp"
                android:textColor="#8c6969"
                android:layout_marginLeft="16dp"
                android:gravity="top"
        />
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Review Order"
                android:id="@+id/ReviewOrder"
                android:layout_marginLeft="16dp"
        />
    </LinearLayout>

</LinearLayout>