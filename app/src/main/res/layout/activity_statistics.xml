<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UI.StatisticsActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/totalUsers"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:text="15"
            android:layout_alignParentEnd="true" android:layout_marginEnd="85dp"
            android:layout_alignTop="@+id/textView4"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Total Users: "
            android:layout_alignParentTop="true"
            android:layout_marginTop="46dp" android:id="@+id/textView4"
            android:layout_alignStart="@+id/textView5"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Total Orders: "
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="116dp" android:id="@+id/textView5"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Total Money: "
            android:layout_alignParentTop="true"
            android:layout_marginTop="175dp" android:id="@+id/textView6" android:layout_alignStart="@+id/textView4"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Average Meal Price:"
            android:layout_alignParentTop="true"
            android:layout_marginTop="232dp" android:id="@+id/textView7" android:layout_alignStart="@+id/textView4"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/totalOrders"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:text="15"
            android:layout_alignTop="@+id/textView5" android:layout_alignStart="@+id/totalUsers"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/totalMoney"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:text="200"
            android:layout_alignTop="@+id/textView6" android:layout_alignStart="@+id/totalUsers"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/avgMealPrice"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:text="200"
            android:layout_alignTop="@+id/textView7" android:layout_alignStart="@+id/totalUsers"/>

</RelativeLayout>